<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basico.comida_basico.Basico_Ejercicio6_Comida"
    android:background="@color/primaryColor">

    <include android:id="@+id/include2"
        layout="@layout/titulo_seccion_nivel_puntos"/>

    <TextView
        android:id="@+id/txtPregunta"
        style="@style/styleSubtitulo"
        android:layout_margin="16dp"
        android:text="pregunta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.025" />

    <ImageButton
        android:id="@+id/ibIniciar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="iniciar"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPregunta"
        app:srcCompat="@drawable/audio"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        style="@style/styleButtonOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOp2"
        app:layout_constraintTop_toBottomOf="@+id/ibIniciar"
        app:layout_constraintBottom_toTopOf="@+id/btnOp3"/>

    <Button
        android:id="@+id/btnOp2"
        style="@style/styleButtonOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnOp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibIniciar"
        app:layout_constraintBottom_toTopOf="@+id/btnOp4"/>

    <Button
        android:id="@+id/btnOp3"
        style="@style/styleButtonOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOp4"
        app:layout_constraintTop_toBottomOf="@+id/btnOp1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnOp4"
        style="@style/styleButtonOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnOp3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOp2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>