<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basico.saludo_basico.Basico_Ejercicio4_Saludo"
    android:background="@color/primaryColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NIVEL BASICO"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                style="@style/styleNivel"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="5 puntos"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                style="@style/styleNivel"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagenId"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:layout_below="@+id/linearLayout"
                android:src="@drawable/img_base"
                android:layout_centerHorizontal="true"

                />

            <ImageButton
                android:id="@+id/ibIniciar4saludo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/primaryColor"

                android:onClick="iniciar"
                app:srcCompat="@drawable/ic_audio"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            style="@style/styleLabel"/>
        <Spinner
            android:id="@+id/spRespuesta"
            style="@style/spinner_style"
            android:layout_width="220dp"
            android:layout_gravity="center"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/btnSiguiente4_saludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_gravity="center"

            style="@style/styleButton"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>