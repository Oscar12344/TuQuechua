<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avanzado.Avanzado_Video_Numeros"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/styleButtonOpciones"
                android:layout_weight="1"
                android:text="OPCION 1"/>
            <Button
                android:id="@+id/btnOp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/styleButtonOpciones"
                android:layout_weight="1"
                android:text="OPCION 2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOp3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/styleButtonOpciones"
                android:layout_weight="1"
                android:text="OPCION 3"/>
            <Button
                android:id="@+id/btnOp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/styleButtonOpciones"
                android:layout_weight="1"
                android:text="OPCION 4"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>