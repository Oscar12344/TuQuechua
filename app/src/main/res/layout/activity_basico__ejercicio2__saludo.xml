<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".basico.saludo_basico.Basico_Ejercicio2_Saludo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NIVEL BASICO"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                style="@style/styleNivel"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="5 puntos"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                style="@style/styleNivel"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagenId2saludo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:layout_below="@+id/linearLayout"
                android:src="@drawable/img_base"
                android:layout_centerHorizontal="true"

                />

            <ImageButton
                android:id="@+id/ibIniciar2saludo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@color/primaryColor"



                app:srcCompat="@drawable/ic_audio"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            style="@style/styleLabel"/>

        <EditText

            android:id="@+id/etRespuesta2_basica_saludo"
            style="@style/styleEditText"

            android:layout_width="190dp"
            android:layout_height="55dp"

            android:layout_gravity="center"


            android:maxLength="30" />

        <Button
            android:id="@+id/btnSiguiente2_saludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_gravity="center"

            style="@style/styleButton"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>