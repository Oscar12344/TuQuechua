<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basico.familia_basico.Basico_Ejercicio4_Familia"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/styleTitulo"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="NIVEL BASICO"
                android:textSize="20sp" />

            <TextView
                style="@style/styleTitulo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="5 puntos"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenId"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:layout_below="@+id/linearLayout"
                android:src="@drawable/img_base"
                android:layout_centerHorizontal="true"
                android:background="@color/primaryColor" />

            <ImageButton
                android:id="@+id/ibIniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@color/primaryColor"
                android:onClick="iniciar"
                app:srcCompat="@drawable/ic_audio"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPregunta"
            android:text="pregunta"
            android:textSize="20dp"
            style="@style/styleLabel"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spRespuesta"
            style="@style/spinner_style"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnSiguiente"
            android:text="Siguiente"
            style="@style/styleButton"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>