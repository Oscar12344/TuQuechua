    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intermedio.comida_intermedio.Intermedio_EjercicioR15_Comida"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                style="@style/styleTitulo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="NIVEL INTERMEDIO"
                android:textSize="20sp" />

            <TextView
                style="@style/styleTitulo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="5 puntos"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPreguntaOraciones"
            style="@style/styleSubtitulo"
            android:textSize="28sp"
            android:text="@string/avanzado_pregunta_oraciones_incompletas"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:id="@+id/contenedorOraciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="16dp"
                android:background="@color/secondaryDarkColor">
                <TextView
                    android:id="@+id/txtNumeroOrden"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1."
                    android:textStyle="bold"
                    android:textSize="50sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtPrefixOra1"
                            style="@style/styleLabelSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ejemplo de oracion " />

                        <EditText
                            android:id="@+id/palabra1"
