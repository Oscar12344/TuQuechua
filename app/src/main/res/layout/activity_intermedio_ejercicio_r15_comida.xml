            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnSiguiente"
            style="@style/styleButton"
            android:text="Siguiente"
            android:layout_margin="8dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>