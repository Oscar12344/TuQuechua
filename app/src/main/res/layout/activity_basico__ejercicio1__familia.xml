<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basico.familia_basico.Basico_Ejercicio1_Familia"
    android:background="@color/primaryColor">

    <include
        android:id="@+id/include2"
        layout="@layout/titulo_seccion_nivel_puntos" />

    <TextView
        android:id="@+id/txtPalabra"
        style="@style/styleTitulo"
        android:layout_margin="16dp"
        android:text="palabra"
        app:layout_constraintBottom_toTopOf="@+id/imagenId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <ImageView
        android:id="@+id/imagenId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/img_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPalabra"
        app:layout_constraintBottom_toTopOf="@+id/txtPregunta"/>

    <TextView
        android:id="@+id/txtPregunta"
        android:text="pregunta"
        android:textSize="20dp"
        style="@style/styleSubtitulo"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etRespuesta"
        app:layout_constraintTop_toBottomOf="@+id/imagenId"/>

    <EditText
        android:id="@+id/etRespuesta"
        style="@style/styleEditText"
        android:maxLength="30"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSiguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPregunta"/>

    <Button
        android:id="@+id/btnSiguiente"
        style="@style/styleButton"
        android:layout_marginBottom="16dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRespuesta"/>

</androidx.constraintlayout.widget.ConstraintLayout>