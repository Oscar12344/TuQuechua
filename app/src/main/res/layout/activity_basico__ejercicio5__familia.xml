<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".basico.familia_basico.Basico_Ejercicio5_Familia">

    <include android:id="@+id/include2"
        layout="@layout/titulo_seccion_nivel_puntos"/>

    <TextView
        android:id="@+id/tvPregunta"
        style="@style/styleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CuÃ¡l de estos es: "
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/llOp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"/>

    <TextView
        android:id="@+id/tvPalabraE"
        style="@style/styleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ejemplo"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/llOp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/tvPregunta"
        app:layout_constraintTop_toBottomOf="@+id/include2"/>

    <LinearLayout
        android:id="@+id/llOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/llOp3"
        app:layout_constraintEnd_toStartOf="@+id/llOp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta">
        <ImageButton
            android:id="@+id/ibOp1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/img_base" />
        <TextView
            android:id="@+id/tvOp1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/llOp4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llOp1"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta">
        <ImageButton
            android:id="@+id/ibOp2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/img_base" />
        <TextView
            android:id="@+id/tvOp2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/llOp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llOp1">
        <ImageButton
            android:id="@+id/ibOp3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/img_base" />
        <TextView
            android:id="@+id/tvOp3"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llOp3"
        app:layout_constraintTop_toBottomOf="@+id/llOp2">
        <ImageButton
            android:id="@+id/ibOp4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/img_base" />
        <TextView
            android:id="@+id/tvOp4"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>